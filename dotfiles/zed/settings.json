{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "auto_install_extensions": {
    "dockerfile": true,
    "go": true,
    "elixir": true,
    "javascript": true,
    "nix": true
  },
  "confirm_quit": true,
  "cursor_blink": true,
  "terminal": {
    "copy_on_select": true,
    "line_height": "standard",
    "font_family": "JetBrainsMono Nerd Font"
  },
  "scrollbar": {
    "show": "never"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "tab_bar": {
    "show": false
  },
  "enable_language_server": true,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "indent_guides": { "enabled": true },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_other_hints": true,
    "show_parameter_hints": true
  },
  "soft_wrap": "prefer_line",
  "show_wrap_guides": true,
  "project_panel": {
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "auto_fold_dirs": true,
    "auto_reveal_entries": true
  },
  "agent": { "always_allow_tool_actions": true,
             "default_model": {
                         "provider": "ollama",
                         "model": "deepseek-r1:70b"
                 },
                 "enabled": true,  },
  "collaboration_panel": { "button": true },
  "chat_panel": { "button": "always" },
  "outline_panel": {
    "button": true,
    "dock": "right"
  }
}
